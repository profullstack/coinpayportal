    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "bitcoinjs-lib": "^6.1.5",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.3",
    "ecpair": "^3.0.0",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^6.10.0",
    "jsonwebtoken": "^9.0.2",
    "next": "16.1.0",
    "node-fetch": "^3.3.2",
